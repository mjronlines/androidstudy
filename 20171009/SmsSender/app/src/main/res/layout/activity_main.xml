<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_phoneNum"
        android:layout_alignBottom="@+id/et_phoneNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="phone:"/>

    <EditText
        android:id="@+id/et_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ems="10"
        android:hint="请输入电话号码"
        android:inputType="textPersonName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_messsageCon"
        android:layout_alignBottom="@+id/et_messsageCon"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="content:"/>

    <EditText
        android:id="@+id/et_messsageCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_phoneNum"
        android:layout_alignRight="@+id/et_phoneNum"
        android:layout_below="@+id/et_phoneNum"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="请输入短信内容"
        android:inputType="textMultiLine"
        android:lines="5"/>

    <Button
        android:id="@+id/bt_sendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_messsageCon"
        android:layout_alignRight="@+id/et_messsageCon"
        android:layout_below="@+id/et_messsageCon"
        android:layout_marginTop="29dp"
        android:text="发送短信"/>
</RelativeLayout>
